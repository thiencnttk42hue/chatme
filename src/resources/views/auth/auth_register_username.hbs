<div class="row no-gutters login-app">
    <div class="col-sm-12 col-md-12 col-lg-2 col-xl-4">
    </div>
    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-4 login-padding">
        <div class="container-login">
            <div class="content-login">
                <h2 class="login-header login-header-has-come">
                    Đăng ký tài khoản Chatme
                    <div class="come-login">
                        <a class="come-login-link" href="/register"><i class="fas fa-angle-left come-login-icon"></i></a>
                    </div>
                </h2>
                <div class="login-body">
                    <div class="login-form">
                        <form action="" method="post">
                        <div class="form-group">        
                            <input type="text" class=" login-form-input"  placeholder="Tên tài khoản" name="username">
                        </div>
                        <div class="form-group">        
                            <input type="password" class=" login-form-input"  placeholder="Mật khẩu của bạn" name="password">
                        </div>
                        <div class="form-group">        
                            <input type="password" class=" login-form-input"  placeholder="Nhập lại Mật khẩu" name="passwords">
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn-auth">Đăng ký</button>
                            </div>               
                        </div>
                    </form>
                    </div>
                </div>
                <div class="login-footer">
                    <span class="content-footer">Bạn đã có tài khoản? <a class="button-register" href="/login">Đăng nhập</a> </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-2 col-xl-4"></div>
</div>
